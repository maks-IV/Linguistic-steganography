@model PECT_Web.Models.ResultViewModel
@{
    ViewData["Title"] = "Result";
}

<header class="masthead mb-auto">
    <div class="inner">
        <h3 class="masthead-brand">Linguistic steganography</h3>
        <nav class="nav nav-masthead justify-content-center">
            <a class="nav-link" asp-action="Index" asp-controller="Home">Encryption</a>
            <a class="nav-link" asp-action="Decryption" asp-controller="Home">Decryption</a>
            <a class="nav-link active" href="#">Result</a>
        </nav>
    </div>
</header>

<main role="main" class="inner cover">
    <div class="container center-block text-center h-100">
        <div class="row mt-4 mb-4">
            <div class="col-md-6">
                <div class="row">
                    <div class="my-auto col-md-6">
                        <h3 class="display-4 @Model.TextStatus"><b>@Model.Status</b></h3>
                    </div>
                    <div class="col-md-6">
                        <h1 class="ml-5 display-4">@Model.TimeMS<sub>ms</sub></h1>
                    </div>
                </div>
                @foreach(var item in Model.Stages)
                {
                    <div class="row mt-1 border-bottom @Model.BorderStatus">
                        <div class="my-auto col-md-9">
                            <h4 class="text-left my-0 py-3" style="font-family:'Segoe UI Historic'!important">@item.Key</h4>
                        </div>
                        <div class="col-md-2">
                            @if (item.Value == true)
                            {
                                <img class="d-block rounded-circle m-1 w-50 img-fluid py-3" src="~/images/tick.png">
                            }
                            else
                            {
                                <img class="d-block rounded-circle m-1 w-50 img-fluid py-3" src="~/images/buttonCross.svg">
                            }
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-5 ml-5">
                <h1 class="mt-3 mb-3 display-4 text-center">Result</h1>
                <div class="row">
                    <div class="col-md-12 mx-auto">
                        <form class="" accept-charset="utf-8">
                            <div class="form-group mx-auto">
                                <textarea asp-for="Output" class="form-control bg-dark @Model.BorderStatus shadow-lg text-light" id="exampleTextarea" rows="3" style="margin-top: 0px; margin-bottom: 0px; height: 249px;" readonly></textarea>
                            </div>
                            <button type="button" onclick="CopyToClipboard()" class="btn @Model.BtnStatus rounded-pill border-dark mt-4">Copy to clipboard</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

    
